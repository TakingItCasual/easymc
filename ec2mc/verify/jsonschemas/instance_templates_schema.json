{
    "type": "object",
    "properties": {
        "ec2mc_template_info": {
            "type": "object",
            "properties": {
                "AMI_info": {
                    "type": "object",
                    "properties": {
                        "AMI_ID": {"type" : "string"},
                        "device_name": {"type" : "string"},
                        "default_user": {"type" : "string"}
                    },
                    "required": ["AMI_ID", "device_name", "default_user"]
                },
                "instance_type": {"type": "string"},
                "volume_size": {"type": "integer"},
                "elastic_address": {"type": "boolean"},
                "security_groups": {
                    "type" : "array",
                    "items": {"type": "string"},
                    "minItems": 1,
                    "uniqueItems": true
                },
                "write_directories": {
                    "type" : "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "local_dir": {"type": "string"},
                            "instance_dir": {"type": "string"},
                            "owner": {"type": "string"},
                            "chmod": {
                                "type": "string",
                                "pattern": "^[0-7]{4}$"
                            }
                        },
                        "required": ["local_dir", "instance_dir"]
                    },
                    "minItems": 1,
                    "uniqueItems": true
                }
            },
            "required": [
                "AMI_info",
                "instance_type",
                "volume_size",
                "elastic_address",
                "security_groups"
            ]
        }
    },
    "required": ["ec2mc_template_info"]
}
